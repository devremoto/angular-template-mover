{
  "name": "angular-template-mover",
  "author": {
    "name": "Adilson de Almeida Pedro",
    "email": "adilson@almeidapedro.com.br",
    "url": "https://adilson.almeidapedro.com.br",
    "github": "https://github.com/devremoto",
    "twitter": "https://twitter.com/devremoto",
    "linkedin": "https://www.linkedin.com/in/adilsonpedro/"
  },
  "displayName": "Angular Template Mover",
  "description": "Moves template or style to a separeted file and moves the css or html to component",
  "version": "0.0.3",
  "publisher": "AdilsondeAlmeidaPedro",
  "repository": {
    "type": "git",
    "url": "https://github.com/devremoto/angular-template-mover"
  },
  "bugs": {
    "url": "https://github.com/devremoto/angular-template-mover/issues"
  },
  "icon": "assets/icon-256.png",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:typescript"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "angular-template-mover.extractTemplate",
        "title": "Extract Template to File"
      },
      {
        "command": "angular-template-mover.extractStyles",
        "title": "Extract Styles to File"
      },
      {
        "command": "angular-template-mover.inlineTemplate",
        "title": "Move htm/html to Inline Template"
      },
      {
        "command": "angular-template-mover.inlineStyles",
        "title": "Move css/scss/sass/less to Inline Styles"
      },
      {
        "command": "angular-template-mover.inlineTemplateFromHtml",
        "title": "Move HTML to Inline Template"
      },
      {
        "command": "angular-template-mover.inlineStylesFromCss",
        "title": "Move style to Inline Styles"
      }
    ],
    "submenus": [
      {
        "id": "angular-template-mover.submenu",
        "label": "Angular Template Mover"
      }
    ],
    "menus": {
      "angular-template-mover.submenu": [
        {
          "command": "angular-template-mover.extractTemplate",
          "when": "resourceExtname == .ts"
        },
        {
          "command": "angular-template-mover.extractStyles",
          "when": "resourceExtname == .ts"
        },
        {
          "command": "angular-template-mover.inlineTemplate",
          "when": "resourceExtname == .ts"
        },
        {
          "command": "angular-template-mover.inlineStyles",
          "when": "resourceExtname == .ts"
        },
        {
          "command": "angular-template-mover.inlineTemplateFromHtml",
          "when": "resourceExtname == .html || resourceExtname == .htm"
        },
        {
          "command": "angular-template-mover.inlineStylesFromCss",
          "when": "resourceExtname == .css || resourceExtname == .scss || resourceExtname == .sass || resourceExtname == .less"
        }
      ],
      "explorer/context": [
        {
          "submenu": "angular-template-mover.submenu",
          "when": "resourceExtname == .ts || resourceExtname == .html || resourceExtname == .htm || resourceExtname == .css || resourceExtname == .scss || resourceExtname == .sass || resourceExtname == .less",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "submenu": "angular-template-mover.submenu",
          "when": "resourceLangId == typescript || resourceLangId == html || resourceLangId == htm || resourceLangId == css || resourceLangId == scss || resourceLangId == sass || resourceLangId == less",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.104.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.10",
    "eslint": "^9.36.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3"
  }
}
